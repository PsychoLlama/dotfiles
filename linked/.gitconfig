[alias]
  a = add -A
  d = diff
  l = log -1000 --format='%Cgreen%h%Creset: %an (%C(yellow)%ar%Creset)%n%s%n%n%b'
  r = reset
  rr = reset --hard HEAD
  rrr = reset --hard HEAD^
  p = push --set-upstream origin
  pf = push --set-upstream origin --force-with-lease
  s = stash
  ss = stash save --include-untracked
  pl = pull --prune origin
  amend = commit --amend
  ls = ls-files
  mr = !"$(dotfiles dir)/utils/get-MR-name.sh"
[user]
  email = JesseTheGibson@gmail.com
  name = Jesse Gibson
[core]
  editor = nvim
[push]
  default = current
[merge]
  tool = vimdiff
[mergetool "vimdiff"]
  cmd = nvim -d "$MERGED" "$LOCAL" "$BASE" "$REMOTE" -c 'wincmd J'
