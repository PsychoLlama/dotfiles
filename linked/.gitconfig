[alias]
  a = add -A
  d = diff
  b = branch
  l = log -1000 --format='%Cgreen%h%Creset: %an (%C(yellow)%ar%Creset)%n%s%n%n%b'
  f = fetch
  cat = cat-file -p
  r = reset
  rr = reset --hard HEAD
  rrr = reset --hard HEAD^
  p = push --set-upstream origin
  pf = push --force-with-lease
  s = stash
  ss = stash save --include-untracked
  pl = pull origin
  amend = commit --amend
  branch-history = !"$(dotfiles dir)/utils/show-git-branch-history"
[user]
  email = JesseTheGibson@gmail.com
  name = Jesse Gibson
[core]
  editor = nvim
  pager = "delta --dark --theme='OneHalfDark'"
[push]
  default = current
[pull]
  rebase = true
[rebase]
  autoStash = true
[merge]
  tool = vimdiff
[mergetool "vimdiff"]
  cmd = nvim -d "$MERGED" "$LOCAL" "$BASE" "$REMOTE" -c 'wincmd J'
[fetch]
  prune = true
