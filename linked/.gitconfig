[alias]
  a = add -A
  d = diff
  l = log --abbrev-commit -1000 --format='%Cgreen%t%Creset: %cn (%C(yellow)%ar%Creset)%n%s%n%n%b'
  r = reset
  rr = reset --hard HEAD
  p = push --set-upstream origin
  s = stash
  ss = stash save --include-untracked
  pl = pull --prune origin
  amend = commit --amend
  ls = ls-files
[user]
  email = Jesse_Gibson@me.com
  name = Jesse Gibson
[core]
  editor = nvim
[push]
  followTags = true
  default = current
[merge]
  tool = vimdiff
[mergetool "vimdiff"]
  cmd = nvim -d "$MERGED" "$LOCAL" "$BASE" "$REMOTE" -c 'wincmd J'
